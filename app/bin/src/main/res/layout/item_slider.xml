<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/relativeLayout">
    <LinearLayout
        android:background="@drawable/gradient_background"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:paddingHorizontal="@dimen/space_25dp"
        android:paddingBottom="@dimen/space_50dp"
        android:orientation="vertical">
        <TextView
            android:layout_above="@id/textViewDesc"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_3dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
        <TextView
            android:layout_below="@+id/textView"
            android:id="@+id/textViewDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt."
            android:textColor="#ccc"
            android:textSize="14sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/item_slide_image_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/hagia_sophia" />
</RelativeLayout>
