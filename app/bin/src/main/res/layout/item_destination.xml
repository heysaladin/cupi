<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_destination_parent_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_180dp"
    android:background="@color/colorPrimary"
    android:fillViewport="true"
    tools:ignore="MissingPrefix">
    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    <ImageView
        android:id="@+id/item_destination_image_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_180dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />
    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/item_destination_favourite_iv"
        android:layout_width="@dimen/favourite_icon_size"
        android:layout_height="@dimen/favourite_icon_size"
        android:layout_margin="@dimen/space_20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />
    <ImageView
        android:id="@+id/item_destination_logo_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:padding="17dp" />
</RelativeLayout>
