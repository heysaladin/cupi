<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:ignore="MissingPrefix"
    android:background="#f9f9f9">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:titleTextColor="#000" />
    <ScrollView
        android:layout_marginTop="@dimen/title_header_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_10dp"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="Add Destination"
                        android:layout_marginLeft="@dimen/space_0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:paddingBottom="@dimen/space_15dp"
                        android:paddingTop="@dimen/space_5dp"
                        android:textColor="#333"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/space_8dp"
                        android:textSize="@dimen/font_30sp"
                        />
                </LinearLayout>
                <View
                    android:layout_alignParentStart="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1dp"
                    android:background="@color/background" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/space_20dp"
                android:paddingRight="@dimen/space_20dp"
                android:paddingTop="@dimen/space_0dp"
                android:paddingBottom="@dimen/space_30dp" >
                <EditText
                    android:textCursorDrawable="@null"
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:hint="name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="18dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="@dimen/space_10dp"
                    android:paddingTop="@dimen/space_10dp"
                    android:background="@color/white"
                    android:textColor="#333"
                    android:textColorHint="#aaa"
                    android:textSize="@dimen/font_medium"
                    android:visibility="visible" />
                <EditText
                    android:textCursorDrawable="@null"
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:hint="image"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="18dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="@dimen/space_10dp"
                    android:paddingTop="@dimen/space_10dp"
                    android:background="@color/white"
                    android:textColor="#333"
                    android:textColorHint="#aaa"
                    android:textSize="@dimen/font_medium"
                    android:visibility="visible" />
                <EditText
                    android:textCursorDrawable="@null"
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:hint="category"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="18dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="@dimen/space_10dp"
                    android:paddingTop="@dimen/space_10dp"
                    android:background="@color/white"
                    android:textColor="#333"
                    android:textColorHint="#aaa"
                    android:textSize="@dimen/font_medium"
                    android:visibility="visible" />
                <EditText
                    android:textCursorDrawable="@null"
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:hint="location"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="18dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="@dimen/space_10dp"
                    android:paddingTop="@dimen/space_10dp"
                    android:background="@color/white"
                    android:textColor="#333"
                    android:textColorHint="#aaa"
                    android:textSize="@dimen/font_medium"
                    android:visibility="visible" />
                <EditText
                    android:textCursorDrawable="@null"
                    android:hint="description"
                    android:paddingLeft="20dp"
                    android:paddingRight="@dimen/space_10dp"
                    android:visibility="visible"
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:focusable="true"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="5"
                    android:paddingBottom="18dp"
                    android:paddingTop="@dimen/space_10dp"
                    android:background="@color/white"
                    android:textColor="#333"
                    android:textColorHint="#aaa"
                    android:textSize="@dimen/font_medium" />
                <EditText
                    android:textCursorDrawable="@null"
                    android:id="@+id/latitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:hint="latitude"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="18dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="@dimen/space_10dp"
                    android:paddingTop="@dimen/space_10dp"
                    android:background="@color/white"
                    android:textColor="#333"
                    android:textColorHint="#aaa"
                    android:textSize="@dimen/font_medium"
                    android:visibility="visible" />
                <EditText
                    android:textCursorDrawable="@null"
                    android:id="@+id/longitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:hint="longitude"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="18dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="@dimen/space_10dp"
                    android:paddingTop="@dimen/space_10dp"
                    android:background="@color/white"
                    android:textColor="#333"
                    android:textColorHint="#aaa"
                    android:textSize="@dimen/font_medium"
                    android:visibility="visible" />
                <EditText
                    android:textCursorDrawable="@null"
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:hint="address"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="18dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="@dimen/space_10dp"
                    android:paddingTop="@dimen/space_10dp"
                    android:background="@color/white"
                    android:textColor="#333"
                    android:textColorHint="#aaa"
                    android:textSize="@dimen/font_medium"
                    android:visibility="visible" />
                <EditText
                    android:textCursorDrawable="@null"
                    android:id="@+id/distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:hint="distance"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="18dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="@dimen/space_10dp"
                    android:paddingTop="@dimen/space_10dp"
                    android:background="@color/white"
                    android:textColor="#333"
                    android:textColorHint="#aaa"
                    android:textSize="@dimen/font_medium"
                    android:visibility="visible" />
                <EditText
                    android:textCursorDrawable="@null"
                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:hint="note"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="18dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="@dimen/space_10dp"
                    android:paddingTop="@dimen/space_10dp"
                    android:background="@color/white"
                    android:textColor="#333"
                    android:textColorHint="#aaa"
                    android:textSize="@dimen/font_medium"
                    android:visibility="visible" />
                <EditText
                    android:textCursorDrawable="@null"
                    android:id="@+id/costs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:hint="costs"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="18dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="@dimen/space_10dp"
                    android:paddingTop="@dimen/space_10dp"
                    android:background="@color/white"
                    android:textColor="#333"
                    android:textColorHint="#aaa"
                    android:textSize="@dimen/font_medium"
                    android:visibility="visible" />
                <EditText
                    android:textCursorDrawable="@null"
                    android:id="@+id/total_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:hint="total_cost"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="18dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="@dimen/space_10dp"
                    android:paddingTop="@dimen/space_10dp"
                    android:background="@color/white"
                    android:textColor="#333"
                    android:textColorHint="#aaa"
                    android:textSize="@dimen/font_medium"
                    android:visibility="visible" />
                <TextView
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:text="S E N D"
                    android:textSize="20dp"
                    android:id="@+id/dd_booking_form_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_20dp"
                    android:background="@color/colorAccentHard"
                    android:paddingBottom="@dimen/space_15dp"
                    android:paddingLeft="@dimen/space_30dp"
                    android:paddingRight="@dimen/space_30dp"
                    android:paddingTop="@dimen/space_15dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
