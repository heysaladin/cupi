<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/space_10dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="10dp"
        android:id="@+id/card_plan"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:gravity="center"
                android:id="@+id/relativeLayout">
                <LinearLayout
                    android:background="@drawable/gradient_background"
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="1dp"
                    android:paddingHorizontal="@dimen/space_25dp"
                    android:paddingBottom="@dimen/space_30dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_above="@id/textViewDesc"
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_10dp"
                        android:gravity="center"
                        android:fontFamily="@font/font_underland"
                        android:text="Explore Bangli"
                        android:textColor="@android:color/white"
                        android:textSize="30sp" />
                    <TextView
                        android:id="@+id/textViewDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView"
                        android:gravity="center"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt."
                        android:textColor="#ccc"
                        android:textSize="14sp" />
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:layout_gravity="top|center"
                    app:cardCornerRadius="@dimen/space_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop" />
                </android.support.v7.widget.CardView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/footer_list"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="bottom"
                        android:text="Bangli, Bali"
                        android:textSize="14dp" />
                    <TextView
                        android:id="@+id/target_date"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="top"
                        android:paddingTop="@dimen/space_3dp"
                        android:text="6 November 2018"
                        android:textSize="12dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/short_currency_x"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/big_price"
                    android:gravity="center_vertical"
                    android:paddingTop="5dp"
                    android:text="Rp."
                    android:textColor="#8b8b8b" />
                <TextView
                    android:id="@+id/big_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginEnd="13dp"
                    android:gravity="center_vertical"
                    android:text="21.000.000"
                    android:textSize="21dp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
